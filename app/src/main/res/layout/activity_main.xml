<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="#07B10E"
        android:onClick="navigateToLogin"
        android:text="Create an account"
        android:textColor="#0C0C0C"
        app:iconTint="#47F309"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_policy"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="353dp"
        android:layout_height="84dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_green_flag" />

    <TextView
        android:id="@+id/tv_green"
        android:layout_width="361dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/museosans_500"
        android:text="   GreenFlag customers can"
        android:textColor="#FBF8F8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

    <TextView
        android:id="@+id/tv_create"
        android:layout_width="357dp"
        android:layout_height="31dp"

        android:fontFamily="@font/museosans_500"
        android:text="    create an account to access"
        android:textColor="#FBF8F8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_green" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/tv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/tick"
        android:drawablePadding="15dp"
        android:fontFamily="@font/museosans_500"
        android:text="Car health updates"
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_create" />

    <TextView
        android:id="@+id/tv_request"
        android:layout_width="208dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/tick"
        android:drawablePadding="15dp"
        android:fontFamily="@font/museosans_500"
        android:text="Request a rescue online"
        android:textColor="#FAF4F4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_car" />

    <TextView
        android:id="@+id/tv_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/tick"
        android:drawablePadding="15dp"
        android:fontFamily="@font/museosans_500"
        android:text="Policy information"
        android:textColor="#FAF4F4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_request" />

</androidx.constraintlayout.widget.ConstraintLayout>